---
import type { GetStaticPaths } from "astro";
import { getLaunchById, getLastestLaunches } from "../../services/spacex";
import Layout from '../../layouts/Layout.astro';

const { id } = Astro.params;

let launch;

if (id) {
    launch = await getLaunchById(id);
}

